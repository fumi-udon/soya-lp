// 7. ラマダン休業通知（ミニマル）
.holiday-notice {
    h2 {
        font-family: 'Playfair Display', serif;
        font-size: 2.2rem;
        letter-spacing: -0.02em;
        color: #000;
    }
}

// 8. 背景スクロールアニメーション
@keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(calc(-300px * 10)); }
