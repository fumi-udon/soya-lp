/* --- Tokyo Current: Soy Sauce Bottle Gimmick --- */

.global-header {
    position: fixed;
    top: 0; left: 0; width: 100%;
    z-index: 11000;
    padding: 20px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    pointer-events: none;
    .nav-left, .nav-right { pointer-events: auto; }
    @media (max-width: 768px) { padding: 15px 20px; }
}

.menu-trigger {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 60px;
    height: 90px; // 縦長ボトル用
    position: relative;
    z-index: 10002;
    color: #000; // 通常時の線の色

    .bottle-wrapper {
        display: block;
        width: 100%;
        height: 100%;
        svg {
            width: 100%;
            height: 100%;
            overflow: visible;
        }
    }

    // --- 初期状態 ---
    .bottle-group {
        transform-origin: 50% 80%; // ボトルの底の方を中心に回転
        transition: transform 0.6s cubic-bezier(0.68, -0.6, 0.32, 1.6);
    }

    .bottle-cap {
        transition: fill 0.3s ease, stroke 0.3s ease;
    }

    .bottle-liquid {
        transition: opacity 0.4s ease;
    }

    .sauce-stream {
        stroke-dasharray: 100;
        stroke-dashoffset: 100;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .sauce-drop {
        opacity: 0;
        transform: translateY(0);
    }

    // --- ACTIVE: 醤油注ぎモード発動 ---
    &.is-active {
        // 1. ボトルを大胆に傾ける (-135度で左上の注ぎ口が下を向く)
        .bottle-group {
            transform: rotate(-135deg) translate(-10px, -15px);
        }

        // 2. キャップがあの「赤」になる
        .bottle-cap {
            fill: #e60012; // Kikkoman Red
            stroke: #e60012; // 線も赤くして一体化
        }

        // 3. 中身の醤油が満タンになる（黒くなる）
        .bottle-liquid {
            opacity: 1;
            transition-delay: 0.1s;
        }

        // 4. ボディの線も少し薄くして液体を際立たせる（任意）
        .bottle-body {
            stroke: #2c1a16;
        }

        // 5. 注ぎ口からタレ発射
        .sauce-stream {
            opacity: 1;
            stroke-dashoffset: 0;
            // 傾き終わった頃にドバっと出る
            transition: stroke-dashoffset 0.4s ease-in 0.3s, opacity 0.1s 0.3s;
        }

        // 6. 雫のループ
        .sauce-drop {
            opacity: 1;
            animation: drip-drop 1.5s cubic-bezier(0.5, 0, 1, 1) infinite 0.7s;
        }
    }
}

// 滴下アニメーション（前回と同じ物理挙動）
@keyframes drip-drop {
    0% { transform: translateY(0) scale(1); opacity: 1; }
    20% { transform: translateY(15px) scale(0.8, 1.2); } // 伸びる
    50% { transform: translateY(50px) scale(0.6, 1.4); } // 加速
    90% { transform: translateY(90px) scale(0.5, 1.5); opacity: 1; }
    100% { transform: translateY(110px) scale(2, 0.1); opacity: 0; } // 着地して消滅
}

// フルスクリーンメニュー（既存維持）
.global-nav {
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100vh;
    background: rgba(255, 255, 255, 0.98);
    z-index: 10500;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: translateY(-100%) scaleY(0.8);
    transform-origin: top;
    transition: transform 0.8s cubic-bezier(0.19, 1, 0.22, 1), opacity 0.5s;
    opacity: 0;
    visibility: hidden;

    &.is-open {
        transform: translateY(0) scaleY(1);
        opacity: 1;
        visibility: visible;
        animation: menu-wobble 1s ease-in-out forwards;
    }

    .nav-links {
        list-style: none;
        padding: 0;
        text-align: center;
        li {
            margin: 25px 0;
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.5s ease;
        }
    }

    &.is-open li {
        opacity: 1;
        transform: translateY(0);
        @for $i from 1 through 5 {
            &:nth-child(#{$i}) { transition-delay: #{0.3 + ($i * 0.1)}s; }
        }
    }

    .nav-item {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        color: #000;
        text-decoration: none;
        letter-spacing: -0.02em;
        position: relative;
        display: inline-block;
        &::after {
            content: ''; position: absolute; bottom: -5px; left: 0; width: 0; height: 1px;
            background: #e60012; // メニューの下線も赤に合わせてみる？
            transition: width 0.4s ease;
        }
        &:hover {
            color: #e60012;
            &::after { width: 100%; }
        }
    }
}

@keyframes menu-wobble {
    0% { transform: translateY(0) skewY(0); }
    20% { transform: translateY(0) skewY(2deg); }
    40% { transform: translateY(0) skewY(-1deg); }
    60% { transform: translateY(0) skewY(0.5deg); }
    100% { transform: translateY(0) skewY(0); }
}
