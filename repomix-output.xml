// 4. タイポグラフィ
.brand-header {
    margin-bottom: 50px;
    h1 {
        font-family: 'Playfair Display', serif;
        font-size: 3.8rem;
        color: #000;
        letter-spacing: -0.05em;
        line-height: 0.8;
        span { color: $c-blue; }
